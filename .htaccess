# Clean URLs for Tapas Restaurant Site
# Simple configuration without WordPress conflicts

RewriteEngine On

# Admin section clean URLs
RewriteRule ^admin/sections/?$ /admin/sections.php [L,QSA]
RewriteRule ^admin/items/?$ /admin/items.php [L,QSA]
RewriteRule ^admin/menus/?$ /admin/menus.php [L,QSA]
RewriteRule ^admin/login/?$ /admin/login.php [L,QSA]
RewriteRule ^admin/qr-print/?$ /admin/qr-print.php [L,QSA]
RewriteRule ^admin/browse-images/?$ /admin/browse_images.php [L,QSA]
RewriteRule ^admin/change-password/?$ /admin/change_password.php [L,QSA]

# Clean URL Routing - Make nice URLs work directly (no redirects)
# Single point of entry for all menu requests
RewriteRule ^menu/?$ /index.php [L,QSA]
RewriteRule ^menu/food/?$ /index.php?menu=food [L,QSA]
RewriteRule ^menu/sushi/?$ /index.php?menu=sushi [L,QSA]
RewriteRule ^menu/drinks/?$ /index.php?menu=drinks [L,QSA]
RewriteRule ^menu/special/?$ /index.php?menu=food [L,QSA]
RewriteRule ^menu/chefs?_?specials/?$ /index.php?menu=chefs_specials [L,QSA]

# Handle legacy HTML files (redirect only the old static files)
RewriteRule ^index\.html$ /aboutus.html [R=301,L]
RewriteRule ^menu\.html$ /index.php [R=301,L]
RewriteRule ^special\.html$ /index.php?menu=chefs_specials [R=301,L]
RewriteRule ^gallery\.html$ /index.php [R=301,L]
RewriteRule ^drinks\.html$ /index.php?menu=drinks [R=301,L]

# Set default document - index.php is now our main page
DirectoryIndex index.php

# Optional: Enable compression for better performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Set cache headers for static files
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
</IfModule>

# WordPress subfolder handling
# Redirect WordPress requests to wp/ subdirectory
RewriteCond %{REQUEST_URI} ^/wp-admin.*$ [OR]
RewriteCond %{REQUEST_URI} ^/wp-login.*$ [OR]
RewriteCond %{REQUEST_URI} ^/wp-content.*$ [OR]
RewriteCond %{REQUEST_URI} ^/wp-includes.*$
RewriteRule ^(.*)$ /wp/$1 [L]

# SGO Unset Vary (Siteground optimization)
Header unset Vary
